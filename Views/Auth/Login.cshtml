@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout_default";
}

<form asp-action="Login" method="post">
    <img class="mb-4" src="/img/logo.jpg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Thông tin Đăng nhập</h1>

    <div class="form-floating mb-2">
      <input type="email" autofocus required name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Địa chỉ Email</label>
    </div>
    <div class="form-floating mb-4">
      <input type="password" name="password" required class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Mật khẩu</label>
    </div>

